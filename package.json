{
  "name": "rooster-dao-ui",
  "version": "0.0.1",
  "description": "RoosterDAO UI",
  "private": true,
  "type": "module",
  "homepage": "https://contracts-ui.substrate.io",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "yarn eslint --fix .",
    "format": "yarn prettier --write .",
    "clean": "rm -rf dist",
    "test": "yarn cypress run",
    "deep-clean": "yarn clean && rm -rf node_modules",
    "regenerate": "yarn deep-clean && yarn && yarn start",
    "postinstall": "husky install",
    "contract-build": "cd ./contracts/governor/ && cargo +nightly contract build",
    "contract-deploy": "cd ./contracts/governor/ && cargo contract instantiate --constructor new --args false --suri //Alice --gas 100000000000 --salt 0x$(openssl rand -hex 16)",
    "contract": "yarn contract-build && yarn contract-deploy"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": "src",
    "reporter": [
      "html",
      "text"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@polkadot/api": "9.4.3",
    "@polkadot/api-contract": "9.4.3",
    "@polkadot/extension-dapp": "^0.44.6",
    "@polkadot/ui-keyring": "^2.9.10",
    "@polkadot/ui-shared": "^2.9.10",
    "big.js": "^6.2.1",
    "buffer": "^6.0.3",
    "copy-to-clipboard": "^3.3.2",
    "date-fns": "^2.29.2",
    "dexie": "^3.2.2",
    "dexie-react-hooks": "1.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.2",
    "react-markdown": "^8.0.3",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.4.0",
    "react-tooltip": "^4.2.21",
    "remark-gfm": "^3.0.1",
    "styled-components": "^5.3.5",
    "tailwind-merge": "^1.2.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nabla/vite-plugin-eslint": "^1.4.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/big.js": "^6.1.5",
    "@types/node": "^18.7.1",
    "@types/react-dom": "^18.0.6",
    "@types/react-dropzone": "^5.1.0",
    "@types/react-select": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.8",
    "cross-env": "^7.0.3",
    "cypress": "^10.7.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.6",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "istanbul-lib-coverage": "^3.2.0",
    "lint-staged": ">=13.0.3",
    "nyc": "^15.1.0",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "vite": "^3.1.0",
    "vite-plugin-istanbul": "^3.0.1",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "lint-staged": {
    "*.{js,cjs,ts,tsx,css,md,json}": "yarn prettier --write"
  },
  "resolutions": {
    "minimist": "npm:minimist@^1.2.6",
    "node-forge": "npm:node-forge@^1.3.0"
  },
  "packageManager": "yarn@3.1.1"
}
